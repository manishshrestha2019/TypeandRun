<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A9D189"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Type and Run"
            android:textColor="#0CB4A1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            style="@style/editTextCss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Make:" />


        <EditText
            android:inputType="text"
            android:id="@+id/etMake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/editTextCss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year:" />

        <EditText
            android:inputType="date"
            android:id="@+id/etYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/editTextCss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color:" />

        <EditText
            android:inputType="text"
            android:id="@+id/etColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/editTextCss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purchase price($):" />

        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/editTextCss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Engine Size(liter):" />

        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/etSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:background="#FF9436"
            android:textStyle="bold"
            android:textColor="#426879"
            android:id="@+id/btnCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Create Car" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <TextView
                android:id="@+id/tvOutput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E7950A"
                />
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</ScrollView>